<%- include('./partials/header') %>

<!-- Navigation -->
<nav class="bg-white shadow-sm border-b border-green-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/users/report" class="flex items-center">
          <img src="/images/logo.png" alt="StrayCare" class="h-10 w-auto mr-3">
          <h1 class="text-2xl font-bold text-green-900">StrayCare</h1>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/users/report" class="text-green-800 hover:text-green-900 font-medium transition-colors duration-200">
          Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Main Form Section -->
<div class="min-h-screen bg-gradient-to-br from-green-50 via-green-25 to-emerald-50">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Form Header -->
    <div class="text-center mb-8">
      <h2 class="text-4xl font-bold text-green-900 mb-4"><%= subject %></h2>
      <p class="text-green-700 text-lg">Help us help animals by providing detailed information</p>
    </div>

    <!-- Form Container -->
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-green-100">
        <form action="/users/report/submit" method="post" enctype="multipart/form-data" class="space-y-6">
          
          <!-- Name Field (Read-only) -->
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              Your Name
            </label>
            <input type="text" name="fullname" value="<%= user.fullname %>" readonly 
              class="w-full px-4 py-3 border border-green-200 rounded-lg bg-green-50 text-green-800 font-medium">
          </div>

          <!-- Contact Number -->
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Contact Number
            </label>
            <input type="tel" name="contact" placeholder="Enter your contact number" required
              class="w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200">
          </div>

          <!-- Subject Field (Read-only) -->
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              Report Type
            </label>
            <input type="text" name="subject" value="<%= subject %>" readonly 
              class="w-full px-4 py-3 border border-green-200 rounded-lg bg-green-50 text-green-800 font-medium">
          </div>

          <!-- Description -->
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Detailed Description
            </label>
            <textarea name="description" rows="5" placeholder="Please provide detailed information about the animal, its condition, behavior, and exact location..." required
              class="w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 resize-none"></textarea>
            <p class="text-sm text-green-600 mt-1">The more details you provide, the better we can help the animal.</p>
          </div>

          <!-- Image Upload -->
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Upload Image
            </label>
            <div class="relative">
              <input name="image" type="file" accept="image/*" id="imageUpload"
                class="w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-green-100 file:text-green-800 file:font-medium hover:file:bg-green-200">
            </div>
            <p class="text-sm text-green-600 mt-1">A clear photo helps us identify and locate the animal more effectively.</p>
          </div>

          <!-- Location Section -->
          <div class="bg-green-50 rounded-xl p-6 border border-green-200">
            <h3 class="text-lg font-semibold text-green-900 mb-4">
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Location Information
            </h3>
            
            <input type="hidden" name="latitude" id="latitude">
            <input type="hidden" name="longitude" id="longitude">
            
            <button type="button" id="getLocationBtn" 
              class="w-full px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium transition-colors duration-200 mb-4">
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Detect My Current Location
            </button>
            
            <div id="locationStatus" class="text-center">
              <p class="text-green-700 text-sm">Click above to automatically detect your location, or the animal's location if you're there.</p>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button type="submit" 
              class="w-full px-8 py-4 bg-green-800 text-white text-lg font-semibold rounded-lg hover:bg-green-900 transform hover:scale-105 transition-all duration-200 shadow-lg">
              Submit Report
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
document.getElementById("getLocationBtn").addEventListener("click", function () {
  const button = this;
  const statusDiv = document.getElementById("locationStatus");
  
  button.disabled = true;
  button.innerHTML = `
    <svg class="w-5 h-5 inline mr-2 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
    </svg>
    Getting Location...
  `;
  
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(
      function (position) {
        document.getElementById("latitude").value = position.coords.latitude;
        document.getElementById("longitude").value = position.coords.longitude;
        
        statusDiv.innerHTML = `
          <div class="bg-green-100 border border-green-300 rounded-lg p-3">
            <svg class="w-5 h-5 inline mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-green-800 font-medium">Location captured successfully!</span>
          </div>
        `;
        
        button.innerHTML = `
          <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Location Captured
        `;
        button.classList.remove('bg-green-600', 'hover:bg-green-700');
        button.classList.add('bg-green-500');
      },
      function (err) {
        statusDiv.innerHTML = `
          <div class="bg-red-100 border border-red-300 rounded-lg p-3">
            <svg class="w-5 h-5 inline mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <span class="text-red-800">Failed to get location. Please try again or enter manually.</span>
          </div>
        `;
        
        button.innerHTML = `
          <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Try Again
        `;
        button.disabled = false;
      }
    );
  } else {
    statusDiv.innerHTML = `
      <div class="bg-yellow-100 border border-yellow-300 rounded-lg p-3">
        <svg class="w-5 h-5 inline mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
        <span class="text-yellow-800">Location services not supported by your browser.</span>
      </div>
    `;
    button.disabled = false;
  }
});
</script>

<%- include('./partials/footer') %>
