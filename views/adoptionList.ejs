<%- include('./partials/header') %>

<!-- Navigation -->
<nav class="bg-white shadow-sm border-b border-amber-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/users/report" class="flex items-center">
          <img src="/images/logo.png" alt="StrayCare" class="h-10 w-auto mr-3">
          <h1 class="text-2xl font-bold text-green-900">StrayCare</h1>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/users/report" class="text-green-800 hover:text-green-900 font-medium transition-colors duration-200">
          Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="min-h-screen bg-gradient-to-br from-amber-50 via-orange-25 to-yellow-50">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-amber-900 mb-4">
        <svg class="w-10 h-10 inline mr-3 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        Find Your Perfect Companion
      </h2>
      <p class="text-amber-700 text-lg max-w-2xl mx-auto">These loving animals are looking for their forever homes. Each one has been cared for and is ready to bring joy to your family.</p>
    </div>

    <!-- Pets Grid -->
    <% if (pets.length === 0) { %>
      <div class="text-center py-16">
        <svg class="w-20 h-20 text-amber-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <h3 class="text-2xl font-bold text-amber-900 mb-4">No Pets Available</h3>
        <p class="text-amber-700 text-lg">Currently, there are no pets available for adoption. Please check back soon!</p>
        <a href="/users/dashboard" class="inline-block mt-6 px-6 py-3 bg-amber-600 text-white rounded-lg hover:bg-amber-700 font-medium transition-colors duration-200">
          Return to Dashboard
        </a>
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        <% pets.forEach(pet => { %>
          <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-amber-100 hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
            <!-- Pet Image -->
            <div class="relative">
              <img src="<%= pet.imagePath %>" alt="<%= pet.petName %>" class="h-64 w-full object-cover">
              <div class="absolute top-4 right-4">
                <span class="px-3 py-1 bg-amber-500 text-white text-sm font-medium rounded-full">
                  Available
                </span>
              </div>
              <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-4">
                <h3 class="text-2xl font-bold text-white"><%= pet.petName %></h3>
              </div>
            </div>

            <!-- Pet Details -->
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-4">
                  <span class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                    <%= pet.petType %>
                  </span>
                  <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= pet.age %> years old
                  </span>
                </div>
              </div>

              <div class="space-y-3 mb-6">
                <p class="text-gray-700 text-sm leading-relaxed line-clamp-3"><%= pet.description %></p>
                
                <div class="grid grid-cols-2 gap-4 text-sm">
                  <div>
                    <span class="font-medium text-amber-800">Breed:</span>
                    <span class="text-gray-600 ml-1"><%= pet.breed || 'Mixed' %></span>
                  </div>
                  <div>
                    <span class="font-medium text-amber-800">Gender:</span>
                    <span class="text-gray-600 ml-1"><%= pet.gender || 'N/A' %></span>
                  </div>
                </div>
              </div>

              <!-- Owner Contact -->
              <div class="bg-amber-50 rounded-lg p-4 border border-amber-200 mb-4">
                <div class="flex items-center mb-2">
                  <svg class="w-4 h-4 text-amber-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <span class="font-medium text-amber-800">Contact Owner</span>
                </div>
                <p class="text-amber-900 font-medium"><%= pet.ownersName %></p>
                <a href="tel:<%= pet.contact %>" class="text-amber-700 hover:text-amber-900 font-medium transition-colors">
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <%= pet.contact %>
                </a>
              </div>

              <!-- Action Button -->
              <button onclick="contactOwner('<%= pet.ownersName %>', '<%= pet.contact %>', '<%= pet.petName %>')" 
                class="w-full px-6 py-3 bg-amber-600 text-white font-semibold rounded-lg hover:bg-amber-700 transition-colors duration-200">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                I'm Interested in <%= pet.petName %>
              </button>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</div>

<script>
function contactOwner(ownerName, phone, petName) {
  const message = `Hi ${ownerName}, I'm interested in adopting ${petName}. Could we please discuss this further?`;
  const whatsappUrl = `https://wa.me/${phone.replace(/\D/g, '')}?text=${encodeURIComponent(message)}`;
  
  // Try WhatsApp first, fallback to regular call
  if (confirm(`Contact ${ownerName} about adopting ${petName}?\n\nThis will open WhatsApp or your phone app.`)) {
    window.open(whatsappUrl, '_blank') || window.location.href = `tel:${phone}`;
  }
}
</script>
