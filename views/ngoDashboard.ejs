<%- include('./partials/header') %>

<!-- Navigation -->
<nav class="bg-white shadow-sm border-b border-green-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <img src="/images/logo.png" alt="StrayCare" class="h-10 w-auto mr-3">
        <h1 class="text-2xl font-bold text-green-900">StrayCare</h1>
        <span class="ml-4 px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">NGO Portal</span>
      </div>
      <div class="flex items-center space-x-4">
        <div class="text-green-800 font-medium">Welcome, <%= ngo.name || 'NGO' %></div>
        <a href="/ngo/logout" class="inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors duration-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          Logout
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Main Dashboard -->
<div class="min-h-screen bg-gradient-to-br from-green-50 via-green-25 to-emerald-50">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Dashboard Header -->
    <div class="mb-8">
      <h2 class="text-4xl font-bold text-green-900 mb-2">NGO Dashboard</h2>
      <p class="text-green-700 text-lg">Manage animal welfare reports and rescue operations</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-lg p-6 border border-green-100">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Reports</p>
            <p class="text-2xl font-semibold text-gray-900"><%= reports.length %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border border-green-100">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-100 rounded-full">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Pending</p>
            <p class="text-2xl font-semibold text-gray-900"><%= reports.filter(r => !r.assignedNGO).length %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border border-green-100">
        <div class="flex items-center">
          <div class="p-3 bg-orange-100 rounded-full">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Ongoing</p>
            <p class="text-2xl font-semibold text-gray-900"><%= reports.filter(r => r.status === 'Ongoing').length %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border border-green-100">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Completed</p>
            <p class="text-2xl font-semibold text-gray-900"><%= reports.filter(r => r.status === 'Completed').length %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Reports Section -->
    <div class="bg-white rounded-2xl shadow-xl border border-green-100">
      <div class="p-6 border-b border-green-100">
        <h3 class="text-2xl font-bold text-green-900">Animal Welfare Reports</h3>
        <p class="text-green-700 mt-1">Review and manage incoming reports</p>
      </div>

      <div class="p-6">
        <% if (reports.length === 0) { %>
          <div class="text-center py-12">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h4 class="text-lg font-medium text-gray-900 mb-2">No reports available</h4>
            <p class="text-gray-500">New animal welfare reports will appear here when submitted.</p>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            <% reports.forEach(report => { %>
              <div class="bg-gradient-to-br from-white to-green-25 rounded-xl shadow-lg border border-green-200 overflow-hidden hover:shadow-xl transition-all duration-300">
                
                <!-- Image Section -->
                <% if (report.imagePath) { %>
                  <div class="relative">
                    <img src="<%= report.imagePath %>" alt="Animal Report" class="w-full h-48 object-cover">
                    <div class="absolute top-3 right-3">
                      <% if (!report.assignedNGO) { %>
                        <span class="px-2 py-1 bg-yellow-500 text-white text-xs font-medium rounded-full">Pending</span>
                      <% } else if (report.status === 'Ongoing') { %>
                        <span class="px-2 py-1 bg-orange-500 text-white text-xs font-medium rounded-full">Ongoing</span>
                      <% } else if (report.status === 'Completed') { %>
                        <span class="px-2 py-1 bg-green-500 text-white text-xs font-medium rounded-full">Completed</span>
                      <% } %>
                    </div>
                  </div>
                <% } %>

                <!-- Content Section -->
                <div class="p-6">
                  <div class="mb-4">
                    <h4 class="text-lg font-semibold text-green-900 mb-2">
                      <svg class="w-4 h-4 inline mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                      <%= report.fullname || "Anonymous Reporter" %>
                    </h4>
                    <p class="text-green-700 text-sm">
                      <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                      <%= report.contact || "No contact provided" %>
                    </p>
                  </div>

                  <div class="space-y-3 mb-4">
                    <div>
                      <span class="text-sm font-medium text-green-800">Category:</span>
                      <span class="text-sm text-gray-700 ml-2"><%= report.category || "General Report" %></span>
                    </div>
                    <div>
                      <span class="text-sm font-medium text-green-800">Description:</span>
                      <p class="text-sm text-gray-700 mt-1 line-clamp-3"><%= report.description || "No description provided" %></p>
                    </div>
                    
                    <% if (report.assignedNGO) { %>
                      <div class="bg-green-50 rounded-lg p-3">
                        <span class="text-sm font-medium text-green-800">Assigned to:</span>
                        <p class="text-sm text-green-700"><%= report.assignedNGO.name %></p>
                        <p class="text-xs text-green-600"><%= report.assignedNGO.phone %></p>
                      </div>
                    <% } %>
                  </div>

                  <!-- Action Buttons -->
                  <div class="flex space-x-2">
                    <% if (!report.assignedNGO) { %>
                      <form action="/ngo/take-case/<%= report._id %>" method="POST" class="flex-1">
                        <button type="submit" class="w-full px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors duration-200">
                          Take Case
                        </button>
                      </form>
                    <% } %>

                    <% if (report.status === "Ongoing" && report.assignedNGO && ngo && report.assignedNGO._id.toString() === ngo._id.toString()) { %>
                      <form action="/ngo/complete-case/<%= report._id %>" method="POST" class="flex-1">
                        <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                          Mark Complete
                        </button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
