<%- include('./partials/header') %>

<!-- Navigation -->
<nav class="bg-white shadow-sm border-b border-green-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/users/report" class="flex items-center">
          <img src="/images/logo.png" alt="StrayCare" class="h-10 w-auto mr-3">
          <h1 class="text-2xl font-bold text-green-900">StrayCare</h1>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/users/report" class="text-green-800 hover:text-green-900 font-medium transition-colors duration-200">
          Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Main Form Section -->
<div class="min-h-screen bg-gradient-to-br from-purple-50 via-purple-25 to-pink-50">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Form Header -->
    <div class="text-center mb-8">
      <h2 class="text-4xl font-bold text-purple-900 mb-4">
        <svg class="w-10 h-10 inline mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        Pet Adoption Form
      </h2>
      <p class="text-purple-700 text-lg max-w-2xl mx-auto">Help your beloved pet find a loving new home by providing detailed information</p>
    </div>

    <!-- Form Container -->
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-purple-100">
        <form action="/users/report/adoption/submit" method="post" enctype="multipart/form-data" class="space-y-6">
          
          <!-- Owner Information Section -->
          <div class="bg-purple-50 rounded-xl p-6 border border-purple-200">
            <h3 class="text-lg font-semibold text-purple-900 mb-4">
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              Owner Information
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-purple-800 mb-2">Owner Name</label>
                <input type="text" name="ownersName" placeholder="Enter your full name" required
                  class="w-full px-4 py-3 border border-purple-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent transition-all duration-200">
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-purple-800 mb-2">Contact Number</label>
                <input type="tel" name="contact" placeholder="Enter your contact number" required
                  class="w-full px-4 py-3 border border-purple-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent transition-all duration-200">
              </div>
            </div>
          </div>

          <!-- Pet Information Section -->
          <div class="bg-amber-50 rounded-xl p-6 border border-amber-200">
            <h3 class="text-lg font-semibold text-amber-900 mb-4">
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2z"></path>
              </svg>
              Pet Details
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <label class="block text-sm font-semibold text-amber-800 mb-2">Pet Name</label>
                <input type="text" name="petName" placeholder="What's your pet's name?" required
                  class="w-full px-4 py-3 border border-amber-300 rounded-lg focus:ring-2 focus:ring-amber-600 focus:border-transparent transition-all duration-200">
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-amber-800 mb-2">Pet Type</label>
                <select name="petType" required
                  class="w-full px-4 py-3 border border-amber-300 rounded-lg focus:ring-2 focus:ring-amber-600 focus:border-transparent transition-all duration-200">
                  <option value="">Select pet type</option>
                  <option value="Dog">Dog</option>
                  <option value="Cat">Cat</option>
                  <option value="Bird">Bird</option>
                  <option value="Rabbit">Rabbit</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
              <div>
                <label class="block text-sm font-semibold text-amber-800 mb-2">Age</label>
                <input type="number" name="age" placeholder="Age in years" min="0" max="30" required
                  class="w-full px-4 py-3 border border-amber-300 rounded-lg focus:ring-2 focus:ring-amber-600 focus:border-transparent transition-all duration-200">
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-amber-800 mb-2">Gender</label>
                <select name="gender" required
                  class="w-full px-4 py-3 border border-amber-300 rounded-lg focus:ring-2 focus:ring-amber-600 focus:border-transparent transition-all duration-200">
                  <option value="">Select gender</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                </select>
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-amber-800 mb-2">Breed</label>
                <input type="text" name="breed" placeholder="Pet breed"
                  class="w-full px-4 py-3 border border-amber-300 rounded-lg focus:ring-2 focus:ring-amber-600 focus:border-transparent transition-all duration-200">
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-semibold text-amber-800 mb-2">Pet Description</label>
              <textarea name="description" rows="4" placeholder="Tell us about your pet's personality, habits, health condition, and why you're looking for a new home..." required
                class="w-full px-4 py-3 border border-amber-300 rounded-lg focus:ring-2 focus:ring-amber-600 focus:border-transparent transition-all duration-200 resize-none"></textarea>
            </div>
          </div>

          <!-- Pet Photo Section -->
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Pet Photo
            </label>
            <input name="image" type="file" accept="image/*" required
              class="w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-green-100 file:text-green-800 file:font-medium hover:file:bg-green-200">
            <p class="text-sm text-green-600 mt-1">Upload a clear, recent photo of your pet to help potential adopters.</p>
          </div>

          <!-- Health Information -->
          <div class="bg-blue-50 rounded-xl p-6 border border-blue-200">
            <h3 class="text-lg font-semibold text-blue-900 mb-4">
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              Health & Care Information
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <label class="flex items-center space-x-3">
                  <input type="checkbox" name="vaccinated" value="true"
                    class="w-5 h-5 text-blue-600 border-blue-300 rounded focus:ring-blue-500">
                  <span class="text-blue-800 font-medium">Vaccinated</span>
                </label>
              </div>
              
              <div>
                <label class="flex items-center space-x-3">
                  <input type="checkbox" name="spayed" value="true"
                    class="w-5 h-5 text-blue-600 border-blue-300 rounded focus:ring-blue-500">
                  <span class="text-blue-800 font-medium">Spayed/Neutered</span>
                </label>
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-semibold text-blue-800 mb-2">Health Notes</label>
              <textarea name="healthNotes" rows="3" placeholder="Any health conditions, medications, or special care requirements..."
                class="w-full px-4 py-3 border border-blue-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all duration-200 resize-none"></textarea>
            </div>
          </div>

          <!-- Reason for Adoption -->
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Reason for Rehoming
            </label>
            <textarea name="reason" rows="3" placeholder="Please explain why you need to find a new home for your pet..." required
              class="w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 resize-none"></textarea>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button type="submit" 
              class="w-full px-8 py-4 bg-purple-600 text-white text-lg font-semibold rounded-lg hover:bg-purple-700 transform hover:scale-105 transition-all duration-200 shadow-lg">
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              List Pet for Adoption
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
