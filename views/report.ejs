<%- include('./partials/header') %>

<!-- Navigation -->
<nav class="bg-white shadow-sm border-b border-green-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <img src="/images/logo.png" alt="StrayCare" class="h-10 w-auto mr-3">
        <h1 class="text-2xl font-bold text-green-900">StrayCare</h1>
        <span class="ml-4 px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">User Dashboard</span>
      </div>
      <div class="flex items-center space-x-4">
        <div class="text-green-800 font-medium">Welcome back!</div>
        <a href="/users/logout" class="inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors duration-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          Logout
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Main Dashboard -->
<div class="min-h-screen bg-gradient-to-br from-green-50 via-green-25 to-emerald-50">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Dashboard Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-green-900 mb-4">Animal Welfare Actions</h2>
      <p class="text-green-700 text-lg max-w-2xl mx-auto">Help us create a safer world for animals. Report incidents, find homes for pets, or adopt a furry friend.</p>
    </div>

    <!-- Action Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12 max-w-4xl mx-auto">
      <!-- Report Actions -->
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-green-100 hover:shadow-2xl transition-all duration-300">
        <div class="text-center mb-6">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-green-900 mb-2">Report Stray</h3>
          <p class="text-green-700 text-sm mb-6">Found a stray animal? Help us locate and rescue them.</p>
        </div>
        <a href="/users/report/stray" class="block w-full px-6 py-3 bg-blue-600 text-white text-center rounded-lg hover:bg-blue-700 font-medium transition-colors duration-200">
          Report Now
        </a>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8 border border-green-100 hover:shadow-2xl transition-all duration-300">
        <div class="text-center mb-6">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-green-900 mb-2">Report Lost Pet</h3>
          <p class="text-green-700 text-sm mb-6">Missing your beloved pet? Let our community help find them.</p>
        </div>
        <a href="/users/report/lost" class="block w-full px-6 py-3 bg-green-600 text-white text-center rounded-lg hover:bg-green-700 font-medium transition-colors duration-200">
          Report Now
        </a>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8 border border-green-100 hover:shadow-2xl transition-all duration-300">
        <div class="text-center mb-6">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-green-900 mb-2">Report Injured</h3>
          <p class="text-green-700 text-sm mb-6">Animal in distress? Report for immediate medical attention.</p>
        </div>
        <a href="/users/report/injured" class="block w-full px-6 py-3 bg-red-600 text-white text-center rounded-lg hover:bg-red-700 font-medium transition-colors duration-200">
          Report Emergency
        </a>
      </div>
    </div>

    <!-- Adoption Section -->
    <div class="bg-white rounded-2xl shadow-xl border border-green-100 mb-12 max-w-4xl mx-auto">
      <div class="p-8">
        <div class="text-center mb-8">
          <h3 class="text-3xl font-bold text-green-900 mb-4">Pet Adoption Center</h3>
          <p class="text-green-700 text-lg">Give a loving home to animals in need or help find homes for pets</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-6 text-center border border-purple-200">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-purple-200 rounded-full mb-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-semibold text-purple-800 mb-2">Put Pet for Adoption</h4>
            <p class="text-purple-700 text-sm mb-4">Help your pet find a new loving family</p>
            <a href="/users/report/adoption" class="inline-block px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-medium transition-colors duration-200">
              List for Adoption
            </a>
          </div>

          <div class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-xl p-6 text-center border border-amber-200">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-amber-200 rounded-full mb-4">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-semibold text-amber-800 mb-2">Adopt a Pet</h4>
            <p class="text-amber-700 text-sm mb-4">Find your perfect furry companion</p>
            <a href="/users/adoption" class="inline-block px-6 py-3 bg-amber-600 text-white rounded-lg hover:bg-amber-700 font-medium transition-colors duration-200">
              Browse Pets
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- My Reports Section -->
    <div class="bg-white rounded-2xl shadow-xl border border-green-100 max-w-6xl mx-auto">
      <div class="p-6 border-b border-green-100">
        <h3 class="text-2xl font-bold text-green-900">My Reported Cases</h3>
        <p class="text-green-700 mt-1">Track the status of your submitted reports</p>
      </div>

      <div class="p-6">
        <% if (reports.length === 0) { %>
          <div class="text-center py-12">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h4 class="text-lg font-medium text-gray-900 mb-2">No reports yet</h4>
            <p class="text-gray-500">Your submitted reports will appear here. Start by reporting an animal in need!</p>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% reports.forEach(report => { %>
              <div class="bg-gradient-to-br from-white to-green-25 rounded-xl shadow-lg border border-green-200 overflow-hidden hover:shadow-xl transition-all duration-300">
                <% if (report.imagePath) { %>
                  <div class="relative">
                    <img src="<%= report.imagePath %>" alt="Animal report" class="w-full h-48 object-cover">
                    <div class="absolute top-3 right-3">
                      <% if (report.status === 'Pending' || !report.assignedNGO) { %>
                        <span class="px-2 py-1 bg-yellow-500 text-white text-xs font-medium rounded-full">Pending</span>
                      <% } else if (report.status === 'Ongoing') { %>
                        <span class="px-2 py-1 bg-blue-500 text-white text-xs font-medium rounded-full">In Progress</span>
                      <% } else if (report.status === 'Completed') { %>
                        <span class="px-2 py-1 bg-green-500 text-white text-xs font-medium rounded-full">Completed</span>
                      <% } %>
                    </div>
                  </div>
                <% } %>

                <div class="p-6">
                  <h4 class="text-lg font-semibold text-green-900 mb-2"><%= report.subject || 'Animal Report' %></h4>
                  <p class="text-gray-700 text-sm mb-4 line-clamp-3"><%= report.description %></p>
                  
                  <div class="space-y-2 text-sm">
                    <div class="flex items-center justify-between">
                      <span class="text-green-800 font-medium">Reported:</span>
                      <span class="text-gray-600"><%= report.dateReported ? report.dateReported.toLocaleDateString() : 'N/A' %></span>
                    </div>
                    
                    <div class="bg-green-50 rounded-lg p-3">
                      <span class="text-green-800 font-medium text-sm">Handled by:</span>
                      <% if (report.assignedNGO && report.assignedNGO.name) { %>
                        <p class="text-green-700 text-sm font-medium"><%= report.assignedNGO.name %></p>
                        <p class="text-green-600 text-xs"><%= report.assignedNGO.phone %></p>
                      <% } else { %>
                        <p class="text-gray-500 text-sm">Awaiting NGO assignment</p>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>


