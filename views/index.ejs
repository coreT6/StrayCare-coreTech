<%- include('./partials/header') %>

<!-- Flash Messages -->
<% if (error && error.length > 0) { %>
  <div id="flashMessage" class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50">
    <div class="flex items-center">
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
      </svg>
      <%= error[0] %>
    </div>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div id="flashMessage" class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50">
    <div class="flex items-center">
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
      </svg>
      <%= success[0] %>
    </div>
  </div>
<% } %>

<!-- Navigation -->
<nav class="bg-white shadow-sm border-b border-green-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <img src="/images/logo.png" alt="StrayCare" class="h-10 w-auto mr-3">
        <h1 class="text-2xl font-bold text-green-900">StrayCare</h1>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/ngo/login" class="inline-flex items-center px-4 py-2 bg-green-800 text-white text-sm font-medium rounded-lg hover:bg-green-900 transition-colors duration-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          NGO Portal
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<div class="min-h-screen bg-gradient-to-br from-green-100 via-green-50 to-emerald-100">
  <div class="container mx-auto px-4 py-12">
    <!-- Taglines Section -->
    <div class="text-center mb-16">
      <h2 class="text-6xl font-bold text-green-900 mb-6">
        Every Stray Deserves <span class="text-green-700">Love & Care</span>
      </h2>
      <p class="text-2xl text-green-800 max-w-3xl mx-auto leading-relaxed">
        Join our mission to rescue, rehabilitate, and rehome stray animals. Together, we can make a difference in their lives.
      </p>
    </div>

    <!-- Main Content - Registration Form -->
    <div class="max-w-md mx-auto">
      <div class="bg-white rounded-2xl shadow-2xl p-10 border border-green-200">
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-green-200 rounded-full mb-6">
            <svg class="w-10 h-10 text-green-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
          </div>
          <h3 class="text-3xl font-bold text-green-900 mb-3">Join Our Community</h3>
          <p class="text-green-700 text-lg">Create your account to start helping animals</p>
        </div>
        
        <form autocomplete="off" action="/users/register" method="post" class="space-y-6">
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">Full Name</label>
            <input class="w-full px-4 py-4 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 text-lg"
              type="text" placeholder="Enter your full name" name="fullname" required>
          </div>
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">Email Address</label>
            <input class="w-full px-4 py-4 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 text-lg"
              type="email" placeholder="Enter your email" name="email" required>
          </div>
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">Password</label>
            <input class="w-full px-4 py-4 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 text-lg"
              type="password" placeholder="Create a strong password" name="password" required>
          </div>
          <button type="submit" class="w-full bg-green-800 text-white py-4 px-6 rounded-lg font-semibold text-lg hover:bg-green-900 transform hover:scale-105 transition-all duration-200 shadow-lg">
            Create My Account
          </button>
        </form>

        <!-- Login Link -->
        <div class="mt-8 text-center">
          <p class="text-green-700 mb-4">Already have an account?</p>
          <button onclick="showLogin()" class="text-green-800 font-semibold hover:text-green-900 underline transition-colors duration-200">
            Sign in here
          </button>
        </div>
      </div>
    </div>

    <!-- Login Modal (Hidden by default) -->
    <div id="loginModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-2xl shadow-2xl p-10 border border-green-200 max-w-md w-full mx-4">
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-green-200 rounded-full mb-6">
            <svg class="w-10 h-10 text-green-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
            </svg>
          </div>
          <h3 class="text-3xl font-bold text-green-900 mb-3">Welcome Back</h3>
          <p class="text-green-700 text-lg">Sign in to continue your mission</p>
        </div>
        
        <form autocomplete="off" action="/users/login" method="post" class="space-y-6">
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">Email Address</label>
            <input class="w-full px-4 py-4 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 text-lg"
              type="email" placeholder="Enter your email" name="email" required>
          </div>
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">Password</label>
            <input class="w-full px-4 py-4 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 text-lg"
              type="password" placeholder="Enter your password" name="password" required>
          </div>
          <button type="submit" class="w-full bg-green-800 text-white py-4 px-6 rounded-lg font-semibold text-lg hover:bg-green-900 transform hover:scale-105 transition-all duration-200 shadow-lg">
            Sign In
          </button>
        </form>

        <div class="mt-8 text-center">
          <button onclick="hideLogin()" class="text-green-800 font-semibold hover:text-green-900 underline transition-colors duration-200">
            Back to Sign Up
          </button>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="mt-16 grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
      <div class="text-center p-6 bg-white rounded-xl shadow-lg border border-green-100">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-green-100 rounded-full mb-4">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-green-800 mb-2">Adopt a Friend</h4>
        <p class="text-green-600">Find your perfect companion from rescued animals</p>
      </div>
      
      <div class="text-center p-6 bg-white rounded-xl shadow-lg border border-green-100">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-emerald-100 rounded-full mb-4">
          <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-green-800 mb-2">Report Strays</h4>
        <p class="text-green-600">Help us locate animals in need of rescue</p>
      </div>
      
      <div class="text-center p-6 bg-white rounded-xl shadow-lg border border-green-100">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-teal-100 rounded-full mb-4">
          <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-green-800 mb-2">Volunteer</h4>
        <p class="text-green-600">Join our community of animal lovers</p>
      </div>
    </div>
  </div>
</div>

<script>
  const flash = document.getElementById('flashMessage');
  if(flash){
    setTimeout(() => {
      flash.style.display = 'none';
    }, 3000); // 3000ms = 3 seconds
  }

  function showLogin() {
    document.getElementById('loginModal').classList.remove('hidden');
  }

  function hideLogin() {
    document.getElementById('loginModal').classList.add('hidden');
  }

  // Close modal when clicking outside
  document.getElementById('loginModal').addEventListener('click', function(e) {
    if (e.target === this) {
      hideLogin();
    }
  });
</script>

<%- include('./partials/footer') %>
