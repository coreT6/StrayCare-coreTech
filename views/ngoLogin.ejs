<%- include('./partials/header') %>

<!-- Flash Messages -->
<% if (typeof error !== 'undefined' && error && error.length > 0) { %>
  <div id="flashMessage" class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50">
    <div class="flex items-center">
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
      </svg>
      <%= error[0] %>
    </div>
  </div>
<% } %>

<% if (typeof success !== 'undefined' && success && success.length > 0) { %>
  <div id="flashMessage" class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50">
    <div class="flex items-center">
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
      </svg>
      <%= success[0] %>
    </div>
  </div>
<% } %>

<!-- Navigation -->
<nav class="bg-white shadow-sm border-b border-green-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <img src="/images/logo.png" alt="StrayCare" class="h-10 w-auto mr-3">
          <h1 class="text-2xl font-bold text-green-900">StrayCare</h1>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/" class="text-green-800 hover:text-green-900 font-medium transition-colors duration-200">
          Back to Home
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- NGO Login Section -->
<div class="min-h-screen bg-gradient-to-br from-green-100 via-green-50 to-emerald-100 flex items-center justify-center py-12">
  <div class="max-w-md w-full mx-4">
    <div class="bg-white rounded-2xl shadow-2xl p-10 border border-green-200">
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-green-200 rounded-full mb-6">
          <svg class="w-10 h-10 text-green-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-green-900 mb-3">NGO Portal</h2>
        <p class="text-green-700 text-lg">Access your organization dashboard</p>
      </div>

      <form action="/ngo/login" method="post" class="space-y-6">
        <div>
          <label class="block text-sm font-semibold text-green-800 mb-2">NGO Email</label>
          <input class="w-full px-4 py-4 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 text-lg"
            type="email" placeholder="Enter your NGO email" name="email" required>
        </div>
        
        <div>
          <label class="block text-sm font-semibold text-green-800 mb-2">Password</label>
          <input class="w-full px-4 py-4 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent transition-all duration-200 text-lg"
            type="password" placeholder="Enter your password" name="password" required>
        </div>

        <button type="submit" class="w-full bg-green-800 text-white py-4 px-6 rounded-lg font-semibold text-lg hover:bg-green-900 transform hover:scale-105 transition-all duration-200 shadow-lg">
          Access NGO Dashboard
        </button>
      </form>

      <div class="mt-8 text-center">
        <p class="text-green-700 text-sm">
          Don't have NGO access? Contact us for registration.
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  const flash = document.getElementById('flashMessage');
  if(flash){
    setTimeout(() => {
      flash.style.display = 'none';
    }, 3000);
  }
</script>

<%- include('./partials/footer') %>
